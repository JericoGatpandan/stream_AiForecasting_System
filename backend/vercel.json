{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["config/**", "models/**", "routes/**", "data/**"],
        "excludeFiles": ["README.md", ".env*"],
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "/index.js"
    },
    {
      "src": "/environmental/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/weather/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/barangays/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/flood/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
